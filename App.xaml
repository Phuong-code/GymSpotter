<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GymSpotter"
             xmlns:converters="clr-namespace:GymSpotter.Converters"
             x:Class="GymSpotter.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:RatingToStarsConverter x:Key="RatingToStarsConverter" />
            <converters:GymTypeToColorConverter x:Key="GymTypeToColorConverter" />
            <converters:DateToTimeAgoConverter x:Key="DateToTimeAgoConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
